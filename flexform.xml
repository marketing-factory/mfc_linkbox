<T3DataStructure>
  <sheets>
    <sDEF>
      <ROOT>
        <TCEforms>
          <sheetTitle>Optionen</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>
        <headline>
                <TCEforms>
                 <label>LLL:EXT:mfc_linkbox/pi1/locallang.xml:label.pi_flexform.textboxHeadline</label>
    				<config>
    				  <type>input</type>
    				</config>
            </TCEforms>
        </headline>
        <optional_content_above>
            <TCEforms>
             <label>LLL:EXT:mfc_linkbox/pi1/locallang.xml:label.pi_flexform.textareaAbove</label>
				<config>
				  <type>text</type>
				  <cols>50</cols>
				  <rows>3</rows>
				</config>
				<defaultExtras>richtext[*]:rte_transform[flag=rte_enabled|mode=ts_css]</defaultExtras>
            </TCEforms>
          </optional_content_above>
          <what_to_display>
              <TCEforms>
             <label>LLL:EXT:mfc_linkbox/pi1/locallang.xml:label.pi_flexform.textareaBelow</label>
				<config>
				  <type>text</type>
				  <cols>50</cols>
				  <rows>3</rows>
				</config>
				<defaultExtras>richtext[*]:rte_transform[flag=rte_enabled|mode=ts_css]</defaultExtras>
            </TCEforms>
          </what_to_display>
        </el>
      </ROOT>
    </sDEF>
  </sheets>
</T3DataStructure>